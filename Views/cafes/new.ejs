<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Cafe</h1>
  <div class="col-6 offset-3">
    <form action="/cafes" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="cafe[title]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="cafe[location]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input class="form-control" type="text" id="title" name="cafe[image]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="coffee">Type of Coffee</label>
        <input class="form-control" type="text" id="coffee" name="cafe[coffee]">
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Coffee price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Username" aria-describedby="price-label"  name="cafe[price]">
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description </label>
          <textarea class="form-control" type="text" id="title" name="cafe[description]"></textarea>
        </div>
      </div>
     
      <div class="mb-3">
        <button class="btn btn-success"> Add Cafe</button>
      </div>
    </form>
    <a href="/cafes">All Cafes</a>
  </div>
</div>
